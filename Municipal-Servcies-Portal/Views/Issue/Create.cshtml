@model Municipal_Servcies_Portal.ViewModels.IssueCreateViewModel
@{
    // Set the page title for the browser tab
    ViewData["Title"] = "Create Page";
}
<main class="main">
    <!-- Header section with breadcrumbs and page title -->
    <section class="section header">
        <nav class="breadcrumb flex gap-8" aria-label="Breadcrumb">
            <a href="/" class="breadcrumb-link">Home</a>
            <span class="breadcrumb-separator">
                <!-- SVG arrow -->
                <svg width="8" height="12" viewBox="0 0 8 12" fill="none"><path d="M2 2l4 4-4 4" stroke="#6B7280" stroke-width="2" fill="none"/></svg>
            </span>
            <a href="/Issue/Create" class="breadcrumb-link active">Report Issues</a>
        </nav>
        <h1 class="page-title">Report an Issue</h1>
        <p class="page-desc">Help us improve your community by reporting issues in your area.</p>
    </section>
    <!-- Info banner for user encouragement -->
    <section class="info-banner shadow-md flex align-center">
        <div class="info-icon">
            <img src="~/images/icons/ic_heart(2).svg" alt="Heart Icon" width="32" height="32" />
        </div>
        <div class="info-text">
            <div class="info-title">Thanks for improving your community!</div>
            <div class="info-desc">Every report helps make our city a better place to live.</div>
        </div>
    </section>
    <!-- Main issue reporting form -->
    <form asp-action="Create" asp-controller="Issue" method="post" enctype="multipart/form-data" class="issue-form rounded-12 shadow-sm bg-white">
        <!-- Form header with icon -->
        <div class="form-header bg-blue-100 flex align-center">
            <div class="form-header-icon">
                <img src="~/images/icons/ic_issue_details.svg" alt="Issue Details Icon" width="32" height="32" />
                </div>
            <h3 class="form-header-title">Issue Details</h3>
        </div>
        <div class="form-body">
            <!-- Location input field -->
            <div class="form-group">
                <label asp-for="Location" class="form-label flex align-center gap-4">
                    <span class="form-label-icon">
                        <img src="~/images/icons/ic_location.svg" alt="Location Icon" width="32" height="32" />
                    </span>
                    <span>Location</span>
                    <span class="form-label-required">*</span>
                </label>
                <input asp-for="Location" class="form-input" placeholder="Enter street address or landmark" />
                <span asp-validation-for="Location" class="text-danger"></span>
                <div class="form-hint">Please be as specific as possible to help us locate the issue quickly.</div>
            </div>
            <!-- Category dropdown -->
            <div class="form-group">
                <label asp-for="Category" class="form-label flex align-center gap-4">
                    <span class="form-label-icon">
                        <img src="~/images/icons/ic_issue_category.svg" alt="Issue Category Icon" width="32" height="32" />
                    </span>
                    <span>Issue Category</span>
                    <span class="form-label-required">*</span>
                </label>
                <select asp-for="Category" class="form-select">
                    <option value="">Select a category</option>
                    <option value="pothole">Pothole</option>
                    <option value="streetlight">Streetlight</option>
                    <option value="graffiti">Graffiti</option>
                    <option value="other">Other</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <!-- Description textarea -->
            <div class="form-group">
                <label asp-for="Description" class="form-label flex align-center gap-4">
                    <span class="form-label-icon">
                        <img src="~/images/icons/ic_description.svg" alt="Description Icon" width="32" height="32" />
                    </span>
                    <span>Description</span>
                    <span class="form-label-required">*</span>
                </label>
                <textarea asp-for="Description" class="form-textarea" rows="6" placeholder="Provide detailed description of the issue..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
                <div class="form-hint">Include as much detail as possible to help us understand and resolve the issue.</div>
            </div>
            <!-- Attachments upload area -->
            <div class="form-group">
                <label asp-for="Attachments" class="form-label flex align-center gap-4">
                    <span class="form-label-icon">
                        <img src="~/images/icons/ic_attatchment.svg" alt="Attachment Icon" width="32" height="32" />
                    </span>
                    <span>Attach Photos or Documents</span>
                </label>
                <div class="upload-area flex-col align-center rounded-8" onclick="document.getElementById('Attachments').click()">
                    <div class="upload-icon">
                        <img src="~/images/icons/ic_upload.svg" alt="Upload Icon" width="32" height="32" />
                    </div>
                    <div class="upload-text text-blue">Click to upload or drag and drop</div>
                    <div class="upload-hint text-gray">PNG, JPG, PDF up to 10MB</div>
                    <input asp-for="Attachments" accept=".png,.jpg,.jpeg,.pdf" multiple style="display:none;" />
                </div>
                <div id="file-info" class="file-info" style="display:none;"></div>
            </div>
            <!-- Optional notifications section -->
            <div class="form-group">
                <div class="form-label flex align-center gap-4">
                    <span class="form-label-icon">
                        <img src="~/images/icons/ic_heart(2).svg" alt="Notification Icon" width="32" height="32" />
                    </span>
                    <span>Progress Notifications (Optional)</span>
                </div>
                <div class="form-hint">Get updates on your report progress. Choose one or both options below.</div>
                <!-- Email Notification -->
                <div class="notification-field">
                    <label class="notification-label" for="NotificationEmail">
                        <input type="checkbox" id="emailCheckbox" class="notification-checkbox" />
                        <span class="notification-text">Email notifications</span>
                    </label>
                    <input asp-for="NotificationEmail" class="form-input notification-input" placeholder="Enter your email address" disabled />
                    <span asp-validation-for="NotificationEmail" class="text-danger"></span>
                </div>
                <!-- Phone Notification -->
                <div class="notification-field">
                    <label class="notification-label" for="NotificationPhone">
                        <input type="checkbox" id="phoneCheckbox" class="notification-checkbox" />
                        <span class="notification-text">SMS notifications</span>
                    </label>
                    <input asp-for="NotificationPhone" class="form-input notification-input" placeholder="Enter your phone number" disabled />
                    <span asp-validation-for="NotificationPhone" class="text-danger"></span>
                </div>
            </div>
            <!-- Progress bar for form completion -->
            <div class="form-progress rounded-8 bg-gray-100">
                <div class="form-progress-header flex justify-between">
                    <span class="form-progress-label">Form Completion</span>
                    <span class="form-progress-value text-blue">25%</span>
                </div>
                <div class="form-progress-bar-bg rounded-full">
                    <div class="form-progress-bar rounded-full" style="width:25%;"></div>
                </div>
            </div>
        </div>
        <!-- Form action buttons -->
        <div class="form-actions flex justify-between">
            <a href="/" class="btn-back-absolute">
                <span class="icon-container">
                    <img src="~/images/icons/ic_back_arrow_dark.svg" alt="Back Arrow Icon" width="14" height="16" />
                </span>
                <span class="text-content">Back to Main Menu</span>
            </a>
            <button type="submit" class="btn-submit-primary">
                <span class="icon-container">
                    <img src="~/images/icons/ic_submit.svg" alt="Submit Icon" width="16" height="16" />
                </span>
                <span class="text-content">Submit Report</span>
            </button>
        </div>
    </form>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


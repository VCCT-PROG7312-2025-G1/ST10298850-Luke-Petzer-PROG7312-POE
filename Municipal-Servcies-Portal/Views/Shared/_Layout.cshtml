<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Municipal_Servcies_Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    @* <link rel="stylesheet" href="~/Municipal_Servcies_Portal.styles.css" asp-append-version="true"/> *@
    <link rel="stylesheet" href="~/css/home.css" />
    <link rel="stylesheet" href="~/css/issues.css" />
    <link rel="stylesheet" href="~/css/confirmation.css" />
    <link rel="stylesheet" href="~/css/comingsoon.css" />
    <link rel="stylesheet" href="~/css/localevents.css" />
    <link rel="stylesheet" href="~/css/servicerequest.css" />
</head>
<body>
<header class="custom-header">
    <div class="header-outer">
        <div class="header-inner">
            <div class="header-left">
                <div class="header-logo">
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/icons/ic_header.svg" alt="Header Icon" width="13.5" height="18" />
                    </a>
                </div>
                <span class="header-title">Municipal Services</span>
            </div>
            <nav class="header-nav">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">Dashboard</a>
                <a asp-area="" asp-controller="Issue" asp-action="Create" class="nav-link">Report Issues</a>
                <a asp-area="" asp-controller="LocalEvents" asp-action="Index" class="nav-link">Local Events</a>
                <a asp-area="" asp-controller="ServiceRequest" asp-action="Index" class="nav-link">Track Status</a>
            </nav>
        </div>
    </div>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="main-footer">
    <div class="footer-content">
        <div class="footer-sections">
            <div class="footer-section">
                <div class="footer-title">Contact Information</div>
                <div class="footer-contact-item">
                    <img src="~/images/icons/ic_phone.svg" alt="Phone" class="footer-icon" width="16" height="16" />
                    <span>(555) 123-4567</span>
                </div>
                <div class="footer-contact-item">
                    <img src="~/images/icons/ic_email.svg" alt="Email" class="footer-icon" width="16" height="16" />
                    <span>services@springfield.gov</span>
                </div>
                <div class="footer-contact-item">
                    <img src="~/images/icons/ic_location_footer.svg" alt="Address" class="footer-icon" width="12" height="16" />
                    <span>123 City Hall Drive, Springfield</span>
                </div>
            </div>
            <div class="footer-section">
                <div class="footer-title">Office Hours</div>
                <div class="footer-hours-item">Monday - Friday: 8:00 AM - 5:00 PM</div>
                <div class="footer-hours-item">Saturday: 9:00 AM - 1:00 PM</div>
                <div class="footer-hours-item">Sunday: Closed</div>
            </div>
            <div class="footer-section">
                <div class="footer-title">Emergency Services</div>
                <div class="footer-emergency-item">For emergencies, call 911</div>
                <div class="footer-emergency-item">Non-emergency: (555) 123-4568</div>
                <div class="footer-emergency-item">24/7 Service Line: (555) 123-4569</div>
            </div>
        </div>
        <div class="footer-bottom">
            &copy; 2024 City of Springfield. All rights reserved.
        </div>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/localevents.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>